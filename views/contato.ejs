  <!-- Form Contact -->
  <section id="contact" class="section db py-5 pt-lg-4 px-3" data-anima="baixo">
    <div class="container">
        <div class="section-title text-center">
            <h3>Contato</h3>
            <p>Deixe uma mensagem por email que lhe retornarei em breve.</p>
        </div><!-- end title -->

        <div class="row my-lg-4">
            <div class="col-md-12">
                <div class="contact_form">
                    <div id="message"></div>
                      <form id="contactForm" name="sentMessage" method="post" action="/contato">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <input class="form-control" name="name" type="text" placeholder="Nome" required="required" data-validation-required-message="Please enter your name.">
                              <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                              <input class="form-control" name="email" type="email" placeholder="Email" required="required" data-validation-required-message="Please enter your email address.">
                              <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                              <input class="form-control" name="tel" type="tel" placeholder="Telefone" required="required" data-validation-required-message="Please enter your phone number.">
                              <p class="help-block text-danger"></p>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <textarea class="form-control" style="min-height: 147px;" name="message" placeholder="Sua mensagem" required="required" data-validation-required-message="Please enter a message."></textarea>
                              <p class="help-block text-danger"></p>
                            </div>
                          </div>
                          <div class="clearfix"></div>
                          <div class="col-lg-12 my-lg-2 d-flex justify-content-center align-items-center flex-column">
                            
                            <!-- Resposta do formulário enviado -->
                              <% if(formContato.info){ %>
                                  <div class="container p-4 position-absolute top-0 mx-auto ">                                
                                    <div class="row">                                
                                      <div class="col-md-4 mx-auto w-auto">                                
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                
                                          <span><%= formContato.info %>! Obrigada pelo contato, responderei o mais rápido possível!</span>
                                
                                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                
                                        </div>                                
                                      </div>
                                    </div>                              
                                  </div>
                              <% } %>

                              <% if(formContato.err){ %>
                                <div class="container p-4 position-absolute top-0 mx-auto">                                
                                  <div class="row">                                
                                    <div class="col-md-4 mx-auto w-auto">                                
                                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                              
                                        <span><%= formContato.err %>, por favor, tente uma das opções abaixo</span>
                              
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                              
                                      </div>                                
                                    </div>
                                  </div>                              
                                </div>
                              <% } %>
                          
                            <!-- btn enviar do formulário -->
                            <button id="sendMessageButton" class="botao-dourado btn-hover-lt" type="submit"> 
                              <span class="">Enviar</span>
                            </button>
                            <span id="spin" class="p-2 text-center d-none"><img src="./images/spin-preload.svg" class="w-25"></div></span>
                          </div>
                          
                          <script>
                              document.querySelector("#contactForm").addEventListener("submit", ()=>{
                                  const spin = document.querySelector("#spin")
                                  spin.classList.remove("d-none")
                                  spin.classList.add("d-block")
                              })
                          </script>
                          
                        </div> <!--end row -->
                      </form>
                    </div>
                  </div>
                </div><!-- end col -->
        </div><!-- end row -->
      </div><!-- end container -->
  </section><!-- end section -->
  <!-- End Form Contact -->

